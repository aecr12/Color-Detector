<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="21dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/getirmeButonu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getirmeButonu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:text="Resmi Getir"
        app:layout_constraintBottom_toTopOf="@+id/renkBilgiTextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/renkBilgiTextView2"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:background="@color/teal_200"
        android:gravity="center"
        android:text="HEX KODU"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/rgbBilgiTextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getirmeButonu" />

    <TextView
        android:id="@+id/rgbBilgiTextView2"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:background="@color/teal_200"
        android:gravity="center"
        android:text="RGB KODU"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/renkAdiTextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/renkBilgiTextView2" />

    <TextView
        android:id="@+id/renkAdiTextView2"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="78dp"
        android:background="@color/teal_200"
        android:gravity="center"
        android:text="RENK ADI"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgbBilgiTextView2" />
</androidx.constraintlayout.widget.ConstraintLayout>